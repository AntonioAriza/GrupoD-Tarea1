    <class>Tarea1.Eventos</class>
    <class>Tarea1.Comentarios</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:derby://localhost:1527/Grupo D"/>
      <property name="javax.persistence.jdbc.user" value="grupod"/>
